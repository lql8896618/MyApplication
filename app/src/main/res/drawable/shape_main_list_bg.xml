<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- This is the layouts.main color -->
    <item>
        <shape>
            <!--    边框颜色 -->
            <solid android:color="#00FF00"/>
        </shape>
    </item>
    <!-- 给View的上 左  右设置8dp的边框 -->
    <item android:top="3px" android:left="3px" android:right="3px" android:bottom="3px" >
        <shape>
            <!--     View填充颜色 -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>