<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/begin_background"
    android:id="@+id/bg_begin_global">
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=" "
        android:id="@+id/btn_begin_exit"
        android:background="#00000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/txt_begin_controlID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ZHL17100001"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"/>
    <TextView
        android:id="@+id/txt_begin_controlVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textColor="#bbbbbb"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/begin_eg"
        android:id="@+id/bg_begin_eg"/>

    <TextView
        android:id="@+id/txt_begin_eg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textColor="#555555"
        android:textStyle="normal"
        android:textSize="14dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/bg_begin_eg"
        android:layout_marginBottom="90dp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:text=" "
        android:id="@+id/btn_begin_manual"
        android:background="@drawable/begin_manual"
        android:layout_marginTop="225dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:text="   "
        android:id="@+id/btn_begin_run"
        android:background="@drawable/begin_run"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="-10dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:text="    "
        android:id="@+id/btn_begin_program"
        android:background="@drawable/begin_program"
        android:layout_marginTop="80dp"
        android:layout_marginRight="-10dp"
        android:layout_alignParentRight="true"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:visibility="gone"
        android:id="@+id/layout_begin_status1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="控制器未绑定"
            android:id="@+id/textView"
            android:layout_gravity="center" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击这里绑定"
            android:id="@+id/btn_begin_bond"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="20dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/begin_unconn"
        android:id="@+id/layout_begin_status2">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="       "
            android:background="#00000000"
            android:id="@+id/btn_begin_createConn"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="125dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/begin_connecting"
        android:id="@+id/layout_begin_status3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在连接控制器..."
            android:id="@+id/txt_begin_conStatus"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="100dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="       "
            android:background="#00000000"
            android:id="@+id/btn_begin_stopConn"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="125dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="@drawable/begin_connected"
        android:id="@+id/layout_begin_status4">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="       "
            android:background="#00000000"
            android:id="@+id/btn_begin_breakConn"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="120dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="升级"
            android:visibility="gone"
            android:id="@+id/btn_begin_update"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="100dp" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="#f1f1f1"
        android:visibility="gone"
        android:id="@+id/layout_begin_update">

        <TextView
            android:id="@+id/txt_begin_updateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>


        <ProgressBar
            android:id="@+id/pro_begin_update"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:id="@+id/btn_begin_update_finish"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            android:visibility="gone"/>
    </FrameLayout>

</RelativeLayout>
