<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design_main_back">
    <!--title-->
    <TextView
        android:id="@+id/design_main_title_pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="97px"
        android:layout_marginTop="72px"
        android:textStyle="bold"
        android:textSize="21px"
        android:textColor="#ffffff"
        android:text="智能循迹车"/>
    <ImageView
        android:id="@+id/design_main_title_image_switch"
        android:layout_width="197px"
        android:layout_height="38px"
        android:layout_marginLeft="298px"
        android:layout_marginTop="41px"
        android:src="@drawable/design_main_title_switch_left"/>
    <Button
        android:id="@+id/design_main_title_btn_switch"
        android:layout_width="197px"
        android:layout_height="114px"
        android:layout_marginLeft="298px"
        android:layout_marginTop="0px"
        android:background="@android:color/transparent"
        android:text="aaa"/>
    <Button
        android:id="@+id/design_main_title_btn_help"
        android:layout_width="110px"
        android:layout_height="114px"
        android:layout_marginLeft="526px"
        android:layout_marginTop="0px"
        android:background="@android:color/transparent"
        android:text="aaa"/>
    <Button
        android:id="@+id/design_main_title_btn_menu"
        android:layout_width="114px"
        android:layout_height="114px"
        android:layout_marginLeft="636px"
        android:layout_marginTop="0px"
        android:text="bbb"
        android:background="@android:color/transparent"
        android:onClick="onClick"/>

<!--中间部分-->
    <!--滚动面板-->
    <com.zhl.design.node.NodeView
        android:id="@+id/design_main_content_scroller"
        android:layout_gravity="left|top"
        android:layout_marginLeft="33px"
        android:layout_marginTop="145px"
        android:layout_width="530px"
        android:layout_height="1157px">
    </com.zhl.design.node.NodeView>

    <!--节点菜单
    <ExpandableListView
        android:id="@+id/design_main_nodemenu"
        android:layout_gravity="bottom|right"
        android:layout_width="160px"
        android:layout_marginTop="200px"
        android:background="@drawable/design_menu_bg"
        android:layout_height="match_parent">

    </ExpandableListView>
    -->
    <com.zhl.design.menu.NodeMenuView
        android:id="@+id/design_main_nodemenu"
        android:layout_width="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginTop="130px"
        android:layout_height="wrap_content">

    </com.zhl.design.menu.NodeMenuView>
    <!--删除-->
    <FrameLayout
        android:id="@+id/design_main_panel_recycle"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:visibility="gone"
        android:background="@drawable/design_recycle_bg">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="80px"
            android:layout_height="80px"
            android:scaleType="fitXY"
            android:src="@drawable/design_recycle"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/design_main_panel_funmenu"
        android:orientation="vertical"
        android:layout_width="160px"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="100px"
        android:background="#ffff00">
        <Button
            android:id="@+id/design_main_btn_create"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:tag="101"
            android:text="新建"/>
        <Button
            android:id="@+id/design_main_btn_rename"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:tag="102"
            android:text="改名"/>
        <Button
            android:id="@+id/design_main_btn_exchange"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:tag="401"
            android:text="切换"/>
        <Button
            android:id="@+id/design_main_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"/>
        <Button
            android:id="@+id/design_main_btn_run"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="运行"/>
        <Button
            android:id="@+id/design_main_btn_debug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="调试"/>

    </LinearLayout>
</FrameLayout>