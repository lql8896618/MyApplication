<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <ImageView
                android:id="@+id/production_dlg_productlist_image_1"
                android:layout_width="300px"
                android:layout_height="500px"
                android:scaleType="fitXY"
                android:src="@android:drawable/alert_light_frame"
                android:tag="0"/>
            <Button
                android:id="@+id/production_dlg_productlist_button_1"
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我要学习"
                android:tag="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/production_dlg_productlist_image_2"
                android:layout_width="300px"
                android:layout_height="500px"
                android:scaleType="fitXY"
                android:src="@android:drawable/alert_light_frame"
                android:tag="1"/>
            <Button
                android:id="@+id/production_dlg_productlist_button_2"
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我要学习"
                android:tag="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/production_dlg_productlist_image_3"
                android:layout_width="300px"
                android:layout_height="500px"
                android:scaleType="fitXY"
                android:src="@android:drawable/alert_light_frame"
                android:tag="2"/>
            <Button
                android:id="@+id/production_dlg_productlist_button_3"
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我要学习"
                android:tag="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/production_dlg_productlist_image_4"
                android:layout_width="300px"
                android:layout_height="500px"
                android:scaleType="fitXY"
                android:src="@android:drawable/alert_light_frame"
                android:tag="3"/>
            <Button
                android:id="@+id/production_dlg_productlist_button_4"
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我要学习"
                android:tag="3"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>